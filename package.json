{
  "name": "create-ts-library",
  "version": "1.0.0",
  "description": "my awesome library",
  "main": "./dist/myLib.min.js",
  "types": "./dist/myLib.d.ts",
  "scripts": {
    "dev": "npm run tslint && webpack --mode development",
    "dev:tsc": "tsc && tsc -m es6 --outDir dist/esm",
    "dev:watch": "nodemon --exec 'npm run dev || exit 1'",
    "tslint": "tslint --project .",
    "build": "npm run tslint && webpack --mode production",
    "build:tsc": "npm run dev:tsc",
    "test": "npm run clean && jest && yarn run demo:test && npm run clean",
    "demo:test": "yarn run build && cd demo && yarn install && yarn test",
    "clean": "rm -rf dist"
  },
  "repository": "https://github.com/ryancat/create-ts-library.git",
  "author": "Ryan Chen <xryanchen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.18",
    "@types/source-map": "0.5.2",
    "@types/webpack": "^4.4.21",
    "jest": "^23.6.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  }
}
